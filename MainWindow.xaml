<Window x:Class="WassControlSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WassControlSys.ViewModels"
        xmlns:core="clr-namespace:WassControlSys.Core"
        xmlns:views="clr-namespace:WassControlSys.Views"
        mc:Ignorable="d"
        Title="WassControlSys" Height="600" Width="1000"
        Icon="Resources/img/logo_WCS.ico">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" ResizeBorderThickness="4" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border Background="{StaticResource WindowBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra de tÃ­tulo personalizada -->
            <Border Grid.Row="0" Background="#1A1A1A" BorderBrush="#333" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- TÃ­tulo -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                        <Image Source="Resources/img/logo_WCS.png" Width="16" Height="16" Margin="0,0,8,0"/>
                        <TextBlock Text="WassControlSys" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryBrush}"/>
                    </StackPanel>

                    <!-- Controles de ventana -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True">
                        <!-- BotÃ³n Minimizar -->
                        <Button x:Name="MinimizeButton" 
                                Content="ðŸ—•" 
                                Width="46" 
                                Height="32" 
                                Background="Transparent" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="16"
                                Cursor="Hand"
                                Click="MinimizeButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2A2A2A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- BotÃ³n Maximizar/Restaurar -->
                        <Button x:Name="MaximizeButton" 
                                Content="ðŸ—–" 
                                Width="46" 
                                Height="32" 
                                Background="Transparent" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="16"
                                Cursor="Hand"
                                Click="MaximizeButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2A2A2A"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- BotÃ³n Cerrar -->
                        <Button x:Name="CloseButton" 
                                Content="âœ•" 
                                Width="46" 
                                Height="32" 
                                Background="Transparent" 
                                Foreground="White" 
                                BorderThickness="0" 
                                FontSize="16"
                                Cursor="Hand"
                                Click="CloseButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E81123"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Barra lateral -->
                <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" BorderBrush="#333" BorderThickness="0,0,1,0">
                    <StackPanel Margin="20">
                        <!-- Logo / TÃ­tulo -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                            <Image Source="Resources/img/logo_WCS.png" Width="32" Height="32" Margin="0,0,10,0"/>
                            <TextBlock Text="WassControl" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- NavegaciÃ³n -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <Button Content="Inicio Principal" Command="{Binding NavigateCommand}" CommandParameter="Dashboard" Style="{StaticResource NavButtonStyle}"/>
                                <Button Content="Mantenimiento" Command="{Binding NavigateCommand}" CommandParameter="Mantenimiento" Style="{StaticResource NavButtonStyle}"/>
                                <Button Content="Rendimiento" Command="{Binding NavigateCommand}" CommandParameter="Rendimiento" Style="{StaticResource NavButtonStyle}"/>
                                <Button Content="Aplicaciones" Command="{Binding NavigateCommand}" CommandParameter="Aplicaciones" Style="{StaticResource NavButtonStyle}"/>
                                <Button Content="Hardware" Command="{Binding NavigateCommand}" CommandParameter="Hardware" Style="{StaticResource NavButtonStyle}"/>
                                <Button Content="ConfiguraciÃ³n" Command="{Binding NavigateCommand}" CommandParameter="Configuracion" Style="{StaticResource NavButtonStyle}" Margin="0,20,0,0"/>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Ãrea de contenido principal -->
                <Grid Grid.Column="1" Margin="30">
                    <views:DashboardView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Dashboard}"/>
                    <views:MantenimientoView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Mantenimiento}"/>
                    <views:RendimientoView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Rendimiento}"/>
                    <views:AplicacionesView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Aplicaciones}"/>
                    <views:HardwareView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Hardware}"/>
                    <views:SettingsView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Configuracion}"/>
                </Grid>
            </Grid>

            <!-- Busy Overlay -->
            <Grid Grid.Row="1" Background="#88000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="280" Height="14" />
                    <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="14" Margin="0,10,0,0" TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>

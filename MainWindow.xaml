<Window x:Class="WassControlSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:WassControlSys.ViewModels"
        xmlns:core="clr-namespace:WassControlSys.Core"
        xmlns:views="clr-namespace:WassControlSys.Views"
        mc:Ignorable="d"
        Title="WassControlSys" Height="600" Width="1000"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        ShowActivated="True"
        Icon="Resources/img/logo_WCS.ico">

    <Border Background="{StaticResource WindowBackgroundBrush}">
        <Grid>
            <!-- Main Content -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Barra lateral -->
                <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" BorderBrush="#333" BorderThickness="0,0,1,0">
                    <StackPanel Margin="20">
                        <!-- Logo / TÃ­tulo -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                            <Image Source="Resources/img/logo_WCS.png" Width="32" Height="32" Margin="0,0,10,0"/>
                            <TextBlock Text="WassControl" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- NavegaciÃ³n -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <Button Content="ðŸ  Inicio Principal" Command="{Binding NavigateCommand}" CommandParameter="Dashboard" Style="{StaticResource NavButtonStyle}"/>
                                <Button Content="ðŸ›¡ï¸ ProtecciÃ³n" Command="{Binding NavigateCommand}" CommandParameter="Proteccion" Style="{StaticResource NavButtonStyle}"/>
                                <Button Content="ðŸ§¹ Almacenamiento" Command="{Binding NavigateCommand}" CommandParameter="Almacenamiento" Style="{StaticResource NavButtonStyle}"/>
                                <Button Content="âš¡ Rendimiento" Command="{Binding NavigateCommand}" CommandParameter="Rendimiento" Style="{StaticResource NavButtonStyle}"/>
                                <Button Content="ðŸ“¦ Aplicaciones" Command="{Binding NavigateCommand}" CommandParameter="Aplicaciones" Style="{StaticResource NavButtonStyle}"/>
                                <Button Content="ðŸ› ï¸ Caja de Herramientas" Command="{Binding NavigateCommand}" CommandParameter="Herramientas" Style="{StaticResource NavButtonStyle}"/>
                                <Button Content="ðŸ–¥ï¸ Hardware" Command="{Binding NavigateCommand}" CommandParameter="Hardware" Style="{StaticResource NavButtonStyle}"/>
                                <Button Content="âš™ï¸ ConfiguraciÃ³n" Command="{Binding NavigateCommand}" CommandParameter="Configuracion" Style="{StaticResource NavButtonStyle}" Margin="0,20,0,0"/>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Ãrea de contenido principal -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Subtle Loading Bar -->
                    <ProgressBar Grid.Row="0" IsIndeterminate="True" Height="2" Background="Transparent" BorderThickness="0"
                                 Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 VerticalAlignment="Top" Panel.ZIndex="100"/>

                    <Grid Grid.Row="1" Margin="30">
                        <views:DashboardView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Dashboard}"/>
                        <views:SecurityView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Proteccion}"/>
                        <views:CleaningView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Almacenamiento}"/>
                        <views:RendimientoView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Rendimiento}"/>
                        <views:ProfileEditorView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=EditorPerfiles}"/>
                        <views:AplicacionesView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Aplicaciones}"/>
                        <views:HardwareView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Hardware}"/>
                        <views:ToolboxView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Herramientas}"/>
                        <views:SettingsView Visibility="{Binding CurrentSection, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Configuracion}"/>
                    </Grid>

                    <!-- Small Status Indicator at Bottom -->
                    <TextBlock Grid.Row="1" Text="{Binding StatusMessage}" 
                               VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                               Margin="0,0,30,10" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="11"
                               Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>

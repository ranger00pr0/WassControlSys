<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
  <!-- Settings -->
  <sys:String x:Key="Settings_Title">Configuración</sys:String>
  <sys:String x:Key="Settings_General">General</sys:String>
  <sys:String x:Key="Settings_RunOnStartup">Iniciar con Windows</sys:String>
  <sys:String x:Key="Settings_RunOnStartup_Desc">Ejecutar WassControl automáticamente al iniciar el sistema.</sys:String>
  <sys:String x:Key="Settings_Personalization">Personalización</sys:String>
  <sys:String x:Key="Settings_DarkMode">Modo Oscuro</sys:String>
  <sys:String x:Key="Settings_DarkMode_Desc">Cambia entre el tema claro y oscuro de la aplicación.</sys:String>
  <sys:String x:Key="Settings_AccentColor">Color de Acento</sys:String>
  <sys:String x:Key="Settings_Language">Idioma</sys:String>
  <sys:String x:Key="Language_Spanish">Español</sys:String>
  <sys:String x:Key="Language_English">Inglés</sys:String>

  <!-- Optimization -->
  <sys:String x:Key="Optimization_DNS_Title">Caché DNS</sys:String>
  <sys:String x:Key="Optimization_DNS_Desc">Limpia la caché DNS para resolver problemas de conectividad y mejorar la velocidad de navegación.</sys:String>
  <sys:String x:Key="Optimization_DNS_Button">Limpiar DNS</sys:String>

  <sys:String x:Key="Optimization_Defrag_Title">Desfragmentación</sys:String>
  <sys:String x:Key="Optimization_Defrag_Desc">Analiza el estado de fragmentación del disco. (Solo HDD, no recomendado para SSD)</sys:String>
  <sys:String x:Key="Optimization_Defrag_Button">Analizar Disco</sys:String>

  <sys:String x:Key="Optimization_SearchIndex_Title">Índice de Búsqueda</sys:String>
  <sys:String x:Key="Optimization_SearchIndex_Desc">Reconstruye el índice de búsqueda de Windows para mejorar la velocidad de búsqueda.</sys:String>
  <sys:String x:Key="Optimization_SearchIndex_Button">Reconstruir Índice</sys:String>

  <sys:String x:Key="Optimization_Prefetch_Title">Prefetch</sys:String>
  <sys:String x:Key="Optimization_Prefetch_Desc">Limpia archivos prefetch antiguos que ya no son necesarios para optimizar el inicio.</sys:String>
  <sys:String x:Key="Optimization_Prefetch_Button">Limpiar Prefetch</sys:String>
</ResourceDictionary>

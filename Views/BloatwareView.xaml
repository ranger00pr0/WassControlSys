<UserControl x:Class="WassControlSys.Views.BloatwareView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:WassControlSys.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Desinstalador de Bloatware" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,30"/>

        <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" CornerRadius="12" Padding="20">
            <StackPanel>
                <TextBlock Text="Aplicaciones Instaladas (Bloatware Potencial)" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,15"/>
                
                <!-- Loading Indicator -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20" 
                            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="20" Height="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Cargando aplicaciones..." Foreground="{StaticResource SecondaryTextBrush}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- No Apps Message -->
                <TextBlock Text="No se detectaron aplicaciones de bloatware." 
                           Foreground="{StaticResource SecondaryTextBrush}" 
                           HorizontalAlignment="Center" Margin="0,20"
                           Visibility="{Binding BloatwareApps.Count, Converter={StaticResource InvertedBooleanToVisibilityConverter}, FallbackValue=Visible}"/>

                <ListView ItemsSource="{Binding BloatwareApps}" Background="Transparent" BorderThickness="0"
                          Visibility="{Binding BloatwareApps.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Nombre" Width="150" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Editor" Width="150" DisplayMemberBinding="{Binding Publisher}"/>
                            <GridViewColumn Header="UbicaciÃ³n" Width="200" DisplayMemberBinding="{Binding InstallLocation}"/>
                            <GridViewColumn Header="Acciones" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Desinstalar" 
                                                Command="{Binding DataContext.UninstallBloatwareAppCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}" 
                                                CommandParameter="{Binding}" 
                                                Style="{StaticResource SecondaryButtonStyle}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

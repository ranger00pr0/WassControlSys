<UserControl x:Class="WassControlSys.Views.CleaningView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
        <Grid Style="{StaticResource AnimatedViewStyle}" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="GestiÃ³n de Almacenamiento" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,25"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.4*"/>
                </Grid.ColumnDefinitions>

                <!-- Columna Izquierda: Limpieza -->
                <ScrollViewer Grid.Column="0" Margin="0,0,20,0">
                    <StackPanel>
                        <!-- Limpieza RÃ¡pida -->
                        <Border Style="{StaticResource AnimatedCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Limpieza RÃ¡pida" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,15"/>
                                <TextBlock Text="Libera espacio eliminando archivos residuales seguros." Foreground="#888" FontSize="13" Margin="0,0,0,20" TextWrapping="Wrap"/>

                                <StackPanel Margin="0,0,0,20">
                                    <CheckBox Content="Papelera de Reciclaje" IsChecked="{Binding CleanRecycleBin}" Foreground="White" Margin="0,5"/>
                                    <CheckBox Content="CachÃ© de Navegadores" IsChecked="{Binding CleanBrowserCache}" Foreground="White" Margin="0,5"/>
                                    <CheckBox Content="Archivos Temporales" IsChecked="{Binding CleanSystemTemp}" Foreground="White" Margin="0,5"/>
                                </StackPanel>

                                <Button Content="LIMPIAR AHORA" Command="{Binding CleanTempFilesCommand}" Style="{StaticResource PrimaryButtonStyle}" Height="40" Margin="0,0,0,5"/>
                                <Button Content="LIMPIEZA PROFUNDA (Sistema)" Command="{Binding CustomSpaceLiberatorCommand}" Style="{StaticResource SecondaryButtonStyle}" Height="35"/>
                            </StackPanel>
                        </Border>

                        <!-- Limpieza de Descargas -->
                        <Border Style="{StaticResource AnimatedCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Carpeta de Descargas" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,15"/>
                                <TextBlock Text="Eliminar archivos antiguos en Descargas." Foreground="#888" FontSize="13" Margin="0,0,0,15" TextWrapping="Wrap"/>
                                
                                <TextBlock Text="Seleccione antigÃ¼edad para borrar:" Foreground="#AAA" FontSize="12" Margin="0,0,0,5"/>
                                <UniformGrid Columns="2">
                                    <Button Content="MÃ¡s de 1 Mes" Command="{Binding CleanDownloadsCommand}" CommandParameter="1Month" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,5,5"/>
                                    <Button Content="MÃ¡s de 1 Semana" Command="{Binding CleanDownloadsCommand}" CommandParameter="1Week" Style="{StaticResource SecondaryButtonStyle}" Margin="5,0,0,5"/>
                                    <Button Content="MÃ¡s de 1 DÃ­a" Command="{Binding CleanDownloadsCommand}" CommandParameter="1Day" Style="{StaticResource SecondaryButtonStyle}" Margin="0,5,5,0"/>
                                    <Button Content="TODO" Command="{Binding CleanDownloadsCommand}" CommandParameter="All" Background="#552222" Foreground="#FF9999" BorderThickness="0" Margin="5,5,0,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource AnimatedCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Herramientas de Windows" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                                <Button Content="Liberador de espacio (Cleanmgr)" Command="{Binding OpenCleanmgrCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="0,5"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Columna Derecha: AnÃ¡lisis Profundo -->
                <Border Grid.Column="1" Style="{StaticResource AnimatedCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,20">
                            <Grid>
                                <StackPanel>
                                    <TextBlock Text="AnÃ¡lisis de Archivos Grandes" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,5"/>
                                    <TextBlock Text="Archivos > 500MB en Usuario." Foreground="#888" FontSize="13"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                                    <Button Content="ðŸ—‘ï¸ Eliminar Seleccionados" Command="{Binding DeleteSelectedLargeFilesCommand}" Style="{StaticResource SecondaryButtonStyle}" Background="#331111" Margin="0,0,10,0"/>
                                    <Button Content="ðŸ”„ Escanear" Command="{Binding DeepScanCommand}" Style="{StaticResource PrimaryButtonStyle}" Width="100"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <Rectangle Grid.Row="1" Height="1" Fill="#333" Margin="0,0,0,20"/>

                        <!-- Resultados del AnÃ¡lisis -->
                        <Grid Grid.Row="2">
                            <TextBlock Text="Presione Escanear para iniciar." Foreground="#555" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Visibility="{Binding DeepScanResult.Count, Converter={StaticResource InvertedIntToVisibilityConverter}}"/>

                            <ScrollViewer Visibility="{Binding DeepScanResult.Count, Converter={StaticResource IntToVisibilityConverter}}">
                                <ItemsControl ItemsSource="{Binding DeepScanResult}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource WindowBackgroundBrush}" CornerRadius="10" Margin="0,0,8,10" Padding="10" BorderBrush="#222" BorderThickness="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/> <!-- Checkbox -->
                                                        <ColumnDefinition Width="Auto"/> <!-- Icon -->
                                                        <ColumnDefinition Width="*"/>    <!-- Path -->
                                                        <ColumnDefinition Width="Auto"/> <!-- Size -->
                                                        <ColumnDefinition Width="Auto"/> <!-- Button -->
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,15,0">
                                                        <CheckBox.LayoutTransform>
                                                            <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                                        </CheckBox.LayoutTransform>
                                                    </CheckBox>
                                                    
                                                    <Border Grid.Column="1" Background="#2A2A2A" Width="36" Height="36" CornerRadius="8" Margin="0,0,15,0">
                                                        <TextBlock Text="ðŸ“„" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Path}" Foreground="White" FontSize="13" FontWeight="Bold" TextTrimming="CharacterEllipsis" MaxWidth="300" ToolTip="{Binding Path}"/>
                                                        <TextBlock Text="Archivo Grande" Foreground="#666" FontSize="11" Margin="0,2,0,0"/>
                                                    </StackPanel>
                                                    
                                                    <TextBlock Grid.Column="3" Text="{Binding FormattedSize}" Foreground="{DynamicResource PrimaryBrush}" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0"/>
                                                    
                                                    <Button Grid.Column="4" 
                                                            Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                            CommandParameter="{Binding Path}"
                                                            Content="ðŸ“‚" 
                                                            ToolTip="Abrir UbicaciÃ³n"
                                                            Style="{StaticResource SecondaryButtonStyle}" 
                                                            Padding="10,5" 
                                                            Width="40"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

</UserControl>
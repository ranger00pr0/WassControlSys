<UserControl x:Class="WassControlSys.Views.CleaningView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="0,0,0,0">
        <TextBlock Text="Módulo de Limpieza" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,30"/>
        
        <Border Background="{StaticResource SurfaceBrush}" CornerRadius="12" Padding="20" HorizontalAlignment="Left" MinWidth="400">
             <StackPanel>
                <TextBlock Text="Limpieza Rápida" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,15"/>
                <TextBlock Text="Elimina archivos temporales, caché de navegador y residuos del sistema para liberar espacio." Foreground="#AAA" FontSize="14" Margin="0,0,0,15" TextWrapping="Wrap"/>
                
                <StackPanel Orientation="Vertical" Margin="0,10,0,15">
                    <CheckBox Content="Vaciar Papelera de Reciclaje" 
                              IsChecked="{Binding CleanRecycleBin}" 
                              Foreground="White" FontSize="14" Margin="0,5"/>
                    <CheckBox Content="Limpiar Caché de Navegador" 
                              IsChecked="{Binding CleanBrowserCache}" 
                              Foreground="White" FontSize="14" Margin="0,5"/>
                    <CheckBox Content="Limpiar Archivos Temporales del Sistema" 
                              IsChecked="{Binding CleanSystemTemp}" 
                              Foreground="White" FontSize="14" Margin="0,5"/>
                </StackPanel>

                <Button Content="Iniciar Limpieza" Command="{Binding CleanTempFilesCommand}" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Left" Width="250"/>
             </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
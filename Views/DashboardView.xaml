<UserControl x:Class="WassControlSys.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Style="{StaticResource AnimatedViewStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado con sutil SlideDown -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Inicio Principal" Style="{StaticResource HeaderTextStyle}"/>
            <TextBlock Text="{Binding WelcomeMessage}" Style="{StaticResource SubHeaderTextStyle}" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Ãrea de Contenido -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,20,0">
                <!-- PANEL PRINCIPAL DE SALUD (HEALTH CHECK) -->
                <Border Style="{StaticResource AnimatedCardStyle}" Margin="0,0,0,20" BorderBrush="{DynamicResource PrimaryBrush}" BorderThickness="0,0,0,4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Cabecera de Salud -->
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="ComprobaciÃ³n de Salud del Sistema" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding GeneralStatusMessage}" FontSize="14" Foreground="#AAA" Margin="0,5,0,0"/>
                            </StackPanel>
                            <Ellipse Width="12" Height="12" Fill="{DynamicResource PrimaryBrush}" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.2" Duration="0:0:0.8" AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                        </Grid>

                        <!-- BotÃ³n Principal PC Boost -->
                        <Button Grid.Row="1" Command="{Binding PcBoostCommand}" Style="{StaticResource PrimaryButtonStyle}" Height="50" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="MEJORAR RENDIMIENTO" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="(PC Boost)" FontSize="12" VerticalAlignment="Center" Opacity="0.8"/>
                            </StackPanel>
                        </Button>

                        <!-- Tarjetas de Resumen -->
                        <UniformGrid Grid.Row="2" Columns="3" Margin="0,15,0,0">
                            <!-- Limpieza -->
                            <Border BorderBrush="#333" BorderThickness="0,0,1,0" Margin="5" Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateCommand}" CommandParameter="Almacenamiento"/>
                                </Border.InputBindings>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Limpieza" FontSize="12" Foreground="#888" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Optimizable" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,5" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Archivos temp." FontSize="11" Foreground="#444" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Seguridad -->
                            <Border BorderBrush="#333" BorderThickness="0,0,1,0" Margin="5" Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateCommand}" CommandParameter="Proteccion"/>
                                </Border.InputBindings>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Seguridad" FontSize="12" Foreground="#888" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Protegido" FontSize="16" FontWeight="Bold" Foreground="#10B981" Margin="0,5" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Windows Update OK" FontSize="11" Foreground="#444" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Apps de Inicio -->
                            <Border Margin="5" Cursor="Hand">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding NavigateCommand}" CommandParameter="Aplicaciones"/>
                                </Border.InputBindings>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Inicio" FontSize="12" Foreground="#888" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding StartupItems.Count, StringFormat='{}{0} Aplicaciones'}" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,5" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Impacto detectado" FontSize="11" Foreground="#444" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </Grid>
                </Border>

                <!-- SEGUNDA FILA: RENDIMIENTO Y MONITOR -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <!-- Acciones RÃ¡pidas y Perfiles -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                         <Border Style="{StaticResource AnimatedCardStyle}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Modo de Rendimiento" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                                <!-- Selector de Modos de Rendimiento (Tarjetas Interactivas) -->
                                <UniformGrid Columns="5" Margin="0,5,0,0">
                                    <UniformGrid.Resources>
                                        <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="RadioButton">
                                                        <Border x:Name="CardBorder" 
                                                                Background="{DynamicResource SurfaceBrush}" 
                                                                BorderBrush="Transparent" 
                                                                BorderThickness="2" 
                                                                CornerRadius="8" 
                                                                Padding="10" 
                                                                Margin="4"
                                                                Cursor="Hand">
                                                            <StackPanel HorizontalAlignment="Center">
                                                                <!-- Icono (Emoji por ahora) -->
                                                                <TextBlock x:Name="Icon" Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                                                           FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,5"
                                                                           Opacity="0.5"/>
                                                                
                                                                <TextBlock x:Name="Text" Text="{TemplateBinding Content}" 
                                                                           FontSize="12" FontWeight="SemiBold" 
                                                                           Foreground="{DynamicResource SecondaryTextBrush}" 
                                                                           HorizontalAlignment="Center"/>
                                                            </StackPanel>
                                                            
                                                            <VisualStateManager.VisualStateGroups>
                                                                <VisualStateGroup x:Name="CommonStates">
                                                                    <VisualState x:Name="Normal"/>
                                                                    <VisualState x:Name="MouseOver">
                                                                        <Storyboard>
                                                                            <ColorAnimation Storyboard.TargetName="CardBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="{StaticResource SurfaceHoverColor}" Duration="0:0:0.2"/>
                                                                        </Storyboard>
                                                                    </VisualState>
                                                                </VisualStateGroup>
                                                                <VisualStateGroup x:Name="CheckStates">
                                                                    <VisualState x:Name="Unchecked"/>
                                                                    <VisualState x:Name="Checked">
                                                                        <Storyboard>
                                                                            <ColorAnimation Storyboard.TargetName="CardBorder" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" To="{StaticResource PrimaryColor}" Duration="0:0:0.2"/>
                                                                            <DoubleAnimation Storyboard.TargetName="Icon" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.2"/>
                                                                            <ColorAnimation Storyboard.TargetName="Text" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" To="{StaticResource PrimaryColor}" Duration="0:0:0.2"/>
                                                                        </Storyboard>
                                                                    </VisualState>
                                                                </VisualStateGroup>
                                                            </VisualStateManager.VisualStateGroups>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                             <Trigger Property="IsChecked" Value="True">
                                                                <!-- Fallback estÃ¡tico por si las animaciones fallan o en diseÃ±o -->
                                                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                                                <Setter TargetName="Text" Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                                                                <Setter TargetName="Icon" Property="Opacity" Value="1"/>
                                                                <Setter TargetName="CardBorder" Property="Background">
                                                                    <Setter.Value>
                                                                        <SolidColorBrush Color="{DynamicResource PrimaryColor}" Opacity="0.1"/>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </UniformGrid.Resources>

                                    <RadioButton Content="General" Tag="ðŸ " IsChecked="{Binding CurrentMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=General}" Command="{Binding ApplyPerformanceModeCommand}" CommandParameter="General"/>
                                    <RadioButton Content="Gamer" Tag="ðŸŽ®" IsChecked="{Binding CurrentMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Gamer}" Command="{Binding ApplyPerformanceModeCommand}" CommandParameter="Gamer"/>
                                    <RadioButton Content="Dev" Tag="ðŸ‘¨â€ðŸ’»" IsChecked="{Binding CurrentMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dev}" Command="{Binding ApplyPerformanceModeCommand}" CommandParameter="Dev"/>
                                    <RadioButton Content="Oficina" Tag="ðŸ“Š" IsChecked="{Binding CurrentMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Oficina}" Command="{Binding ApplyPerformanceModeCommand}" CommandParameter="Oficina"/>
                                    <RadioButton Content="Personal." Tag="âš™ï¸" IsChecked="{Binding CurrentMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Personalizado}" Command="{Binding ApplyPerformanceModeCommand}" CommandParameter="Personalizado"/>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource AnimatedCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Acciones RÃ¡pidas" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                                <UniformGrid Columns="2">
                                    <Button Content="Limpiar RAM" Command="{Binding OptimizeRamCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="5"/>
                                    <Button Content="Punto RestauraciÃ³n" Command="{Binding CreateRestorePointCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="5"/>
                                </UniformGrid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Monitoreo en Tiempo Real -->
                    <Border Grid.Column="1" Style="{StaticResource AnimatedCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Uso del Sistema" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,20"/>
                            
                            <!-- CPU -->
                            <Grid Margin="0,0,0,15">
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Text="CPU" Foreground="#888" FontSize="12"/>
                                        <TextBlock Text="{Binding CpuUsage, StringFormat={}{0:F0}%}" Foreground="White" HorizontalAlignment="Right" FontSize="12" FontWeight="Bold"/>
                                    </Grid>
                                    <ProgressBar Value="{Binding CpuUsage}" Maximum="100" Height="4" Margin="0,5,0,0" Foreground="{DynamicResource PrimaryBrush}"/>
                                </StackPanel>
                            </Grid>

                            <!-- RAM -->
                            <Grid Margin="0,0,0,15">
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Text="RAM" Foreground="#888" FontSize="12"/>
                                        <TextBlock Text="{Binding RamUsage, StringFormat={}{0:F0}%}" Foreground="White" HorizontalAlignment="Right" FontSize="12" FontWeight="Bold"/>
                                    </Grid>
                                    <ProgressBar Value="{Binding RamUsage}" Maximum="100" Height="4" Margin="0,5,0,0" Foreground="#A855F7"/>
                                </StackPanel>
                            </Grid>

                            <!-- Monitor de Temperatura -->
                            <Grid Margin="0,0,0,15">
                                <StackPanel>
                                    <Grid>
                                        <TextBlock Text="Temperatura CPU" Foreground="#888" FontSize="12"/>
                                        <TextBlock Text="{Binding CpuTempC, StringFormat={}{0:F0}Â°C}" Foreground="White" HorizontalAlignment="Right" FontSize="12" FontWeight="Bold"/>
                                    </Grid>
                                    <ProgressBar Value="{Binding CpuTempC}" Maximum="100" Height="4" Margin="0,5,0,0" Foreground="#F59E0B"/>
                                </StackPanel>
                            </Grid>

                            <!-- BaterÃ­a -->
                            <StackPanel Visibility="{Binding BatteryInfo.IsPresent, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Separator Background="#222" Margin="0,5,0,15"/>
                                <Grid>
                                    <TextBlock Text="BaterÃ­a" Foreground="#888" FontSize="12"/>
                                    <TextBlock Text="{Binding BatteryInfo.EstimatedChargeRemaining, StringFormat={}{0}%}" Foreground="White" HorizontalAlignment="Right" FontSize="12" FontWeight="Bold"/>
                                </Grid>
                                <ProgressBar Value="{Binding BatteryInfo.EstimatedChargeRemaining}" Maximum="100" Height="4" Margin="0,5,0,0" Foreground="#10B981"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

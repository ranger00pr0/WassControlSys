<UserControl x:Class="WassControlSys.Views.HardwareView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid Style="{StaticResource AnimatedViewStyle}" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Hardware y Privacidad" Style="{StaticResource HeaderTextStyle}"/>
            <TextBlock Text="InformaciÃ³n tÃ©cnica del sistema y control de privacidad" Style="{StaticResource SubHeaderTextStyle}"/>
        </StackPanel>

        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            <!-- InformaciÃ³n General -->
            <TabItem Header="InformaciÃ³n General">
                <ScrollViewer Margin="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <Border Style="{StaticResource AnimatedCardStyle}" Margin="0,0,15,15">
                                <StackPanel>
                                    <TextBlock Text="Especificaciones TÃ©cnicas" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="{DynamicResource PrimaryBrush}"/>
                                    <ItemsControl ItemsSource="{Binding SystemInformation.GeneralItems}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding Key}" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="13"/>
                                                    <TextBlock Text="{Binding Value}" Grid.Column="1" Foreground="{DynamicResource TextBrush}" FontWeight="SemiBold" TextWrapping="Wrap" FontSize="13"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    
                                    <Separator Background="#333" Margin="0,20"/>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <Button Content="ðŸ“¦ Exportar Backup de Drivers" Command="{Binding ExportDriversCommand}" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Left" Margin="0,0,10,0"/>
                                        <Button Content="âŒ Cancelar ExportaciÃ³n" Command="{Binding CancelDriverExportCommand}" Style="{StaticResource SecondaryButtonStyle}" 
                                                Visibility="{Binding IsExportingDrivers, Converter={StaticResource BooleanToVisibilityConverter}}" HorizontalAlignment="Left"/>
                                    </StackPanel>
                                    
                                    <StackPanel Visibility="{Binding IsExportingDrivers, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,15,0,0">
                                        <TextBlock Text="{Binding DriverExportStatusMessage}" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,5" FontSize="12"/>
                                        <ProgressBar Value="{Binding DriverExportProgress}" Maximum="100" Height="8" Foreground="{DynamicResource PrimaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Panel Lateral: Seguridad Resumida -->
                        <StackPanel Grid.Column="1">
                            <Border Style="{StaticResource AnimatedCardStyle}" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="Estado de Seguridad" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="White"/>
                                    
                                    <Grid Margin="0,5">
                                        <TextBlock Text="Antivirus" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="12"/>
                                        <TextBlock Text="{Binding SecurityStatus.Antivirus}" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Right" FontWeight="Bold" FontSize="12"/>
                                    </Grid>
                                    <Grid Margin="0,5">
                                        <TextBlock Text="Firewall" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="12"/>
                                        <TextBlock Text="{Binding SecurityStatus.Firewall}" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Right" FontWeight="Bold" FontSize="12"/>
                                    </Grid>
                                    <Grid Margin="0,5">
                                        <TextBlock Text="Update" Foreground="{DynamicResource SecondaryTextBrush}" FontSize="12"/>
                                        <TextBlock Text="{Binding SecurityStatus.WindowsUpdate}" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Right" FontWeight="Bold" FontSize="12"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource AnimatedCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="AcciÃ³n RÃ¡pida" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="White"/>
                                    <Button Content="Abrir InformaciÃ³n del Sistema (msinfo32)" Command="{Binding RunToolCommand}" CommandParameter="msinfo32" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,10"/>
                                    <Button Content="Administrador de Dispositivos" Command="{Binding RunToolCommand}" CommandParameter="devmgmt.msc" Style="{StaticResource SecondaryButtonStyle}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Discos (Unificado) -->
            <TabItem Header="Almacenamiento y Discos">
                <ScrollViewer Margin="0,15,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Selector de Disco -->
                        <!-- Selector de Disco y Refrescar -->
                        <Border Style="{StaticResource AnimatedCardStyle}" Margin="0,0,0,20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Seleccionar Unidad" FontSize="14" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,5"/>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox ItemsSource="{Binding UnifiedDisks}" SelectedItem="{Binding SelectedUnifiedDisk}" Style="{StaticResource ModernComboBoxStyle}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ’¾"  Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Label, StringFormat='{}{0} '}" FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding DriveLetter, StringFormat='({0})'}" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <Button Grid.Column="1" Margin="10,0,0,0" 
                                            Style="{StaticResource SecondaryButtonStyle}" 
                                            Command="{Binding RefreshDisksCommand}" 
                                            ToolTip="Refrescar lista de discos">
                                        <TextBlock Text="â†»" FontSize="16"/>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Panel de Detalles del Disco Seleccionado -->
                        <ContentControl Grid.Row="1" Content="{Binding SelectedUnifiedDisk}">
                            <ContentControl.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <!-- Tarjeta Principal: Uso y Salud -->
                                        <Border Style="{StaticResource AnimatedCardStyle}" Margin="0,0,0,20">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- GrÃ¡fico de Uso (Izquierda) -->
                                                <StackPanel Grid.Column="0" Margin="0,0,20,0" VerticalAlignment="Center">
                                                    <Grid Height="120" Width="120">
                                                        <!-- Fondo -->
                                                        <Ellipse Stroke="#333" StrokeThickness="10"/>
                                                        <!-- Progreso (Simulado con Arc o simplificado con texto central por ahora) -->
                                                        <!-- Nota: Sin librerÃ­a de grÃ¡ficos, usamos texto y barra abajo -->
                                                        <TextBlock Text="{Binding UsagePercentage, StringFormat={}{0:F0}%, Mode=OneWay}" 
                                                                   Foreground="{DynamicResource PrimaryBrush}" 
                                                                   FontSize="28" FontWeight="Bold" 
                                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        <TextBlock Text="Usado" Foreground="#888" FontSize="12" Margin="0,35,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Grid>
                                                    <ProgressBar Value="{Binding UsagePercentage, Mode=OneWay}" Maximum="100" Height="8" Margin="0,15,0,5" Foreground="{DynamicResource PrimaryBrush}" Background="#333"/>
                                                    <Grid>
                                                        <TextBlock Text="{Binding FormattedUsed}" Foreground="#AAA" HorizontalAlignment="Left" FontSize="11"/>
                                                        <TextBlock Text="{Binding FormattedSize}" Foreground="White" HorizontalAlignment="Right" FontSize="11" FontWeight="Bold"/>
                                                    </Grid>
                                                </StackPanel>

                                                <!-- EstadÃ­sticas y Salud (Derecha) -->
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Model}" FontSize="18" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" Margin="0,0,0,15"/>
                                                    
                                                    <UniformGrid Columns="2" Rows="2">
                                                        <!-- Salud -->
                                                        <Border Background="#222" CornerRadius="8" Padding="10" Margin="0,0,5,5">
                                                            <StackPanel>
                                                                <TextBlock Text="Estado de Salud" Foreground="#888" FontSize="11"/>
                                                                <TextBlock Text="{Binding HealthStatus}" Foreground="{DynamicResource PrimaryBrush}" FontWeight="Bold" FontSize="14" Margin="0,5,0,0"/>
                                                            </StackPanel>
                                                        </Border>
                                                        <!-- Temperatura -->
                                                        <Border Background="#222" CornerRadius="8" Padding="10" Margin="5,0,0,5">
                                                            <StackPanel>
                                                                <TextBlock Text="Temperatura" Foreground="#888" FontSize="11"/>
                                                                <TextBlock Text="{Binding Temperature}" Foreground="#FF9F43" FontWeight="Bold" FontSize="14" Margin="0,5,0,0"/>
                                                            </StackPanel>
                                                        </Border>
                                                        <!-- Lectura -->
                                                        <Border Background="#222" CornerRadius="8" Padding="10" Margin="0,5,5,0">
                                                            <StackPanel>
                                                                <TextBlock Text="Velocidad Lectura" Foreground="#888" FontSize="11"/>
                                                                <TextBlock Text="{Binding ReadSpeed, StringFormat={}{0:F1} MB/s}" Foreground="White" FontWeight="SemiBold" FontSize="14" Margin="0,5,0,0"/>
                                                            </StackPanel>
                                                        </Border>
                                                        <!-- Escritura -->
                                                        <Border Background="#222" CornerRadius="8" Padding="10" Margin="5,5,0,0">
                                                            <StackPanel>
                                                                <TextBlock Text="Velocidad Escritura" Foreground="#888" FontSize="11"/>
                                                                <TextBlock Text="{Binding WriteSpeed, StringFormat={}{0:F1} MB/s}" Foreground="White" FontWeight="SemiBold" FontSize="14" Margin="0,5,0,0"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </UniformGrid>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <!-- Acciones RÃ¡pidas -->
                                        <TextBlock Text="Herramientas y GestiÃ³n" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="White"/>
                                        <UniformGrid Columns="2">
                                            <Button Content="ðŸ” Analizar Espacio" Command="{Binding AnalyzeCommand}" CommandParameter="{Binding DriveLetter}" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,5,5"/>
                                            <Button Content="ðŸš€ Optimizar / Desfragmentar" Command="{Binding OptimizeCommand}" Style="{StaticResource SecondaryButtonStyle}" Margin="5,0,0,5"/>
                                            <Button Content="ðŸ› ï¸ Administrar Particiones" Command="{Binding DataContext.RunToolCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="diskmgmt.msc" Style="{StaticResource SecondaryButtonStyle}" Margin="0,5,5,0"/>
                                            <Button Content="ðŸ§¹ Liberador de Espacio (Sistema)" Command="{Binding DataContext.OpenCleanmgrCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource SecondaryButtonStyle}" Margin="5,5,0,0"/>
                                        </UniformGrid>
                                    </StackPanel>
                                </DataTemplate>
                            </ContentControl.ContentTemplate>
                        </ContentControl>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <!-- Controladores -->
            <TabItem Header="Controladores y Dispositivos">
                <ScrollViewer Margin="0,15,0,0">
                    <StackPanel>
                        <Border Style="{StaticResource AnimatedCardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Estado de los Controladores" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}"/>
                                    <Button Grid.Column="1" Content="ðŸ”„ Re-escanear" Command="{Binding RefreshDriversCommand}" Style="{StaticResource SecondaryButtonStyle}" Padding="15,5"/>
                                </Grid>

                                <TextBlock Text="Los siguientes dispositivos han reportado errores o faltan sus controladores:" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,20"/>

                                <ItemsControl ItemsSource="{Binding DriversWithProblems}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#1A1A1A" CornerRadius="8" Margin="0,0,0,10" Padding="15" BorderBrush="#333" BorderThickness="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Border Background="#2A2A2A" Width="40" Height="40" CornerRadius="20" Margin="0,0,15,0">
                                                        <TextBlock Text="âš ï¸" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding ErrorDescription}" Foreground="#FF6B6B" FontSize="12" Margin="0,3,0,0" TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding DeviceId}" Foreground="#555" FontSize="10" Margin="0,3,0,0" TextTrimming="CharacterEllipsis"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <Border Background="#1A1A1A" CornerRadius="8" Padding="30" Margin="0,10"
                                        Visibility="{Binding DriversWithProblems.Count, Converter={StaticResource InvertedIntToVisibilityConverter}}">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="âœ…" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                        <TextBlock Text="Todos los controladores funcionan correctamente" Foreground="White" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                        <TextBlock Text="No se detectaron errores de hardware en el sistema." Foreground="#666" FontSize="13" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource AnimatedCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Mantenimiento de Hardware" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="White"/>
                                <TextBlock Text="Para solucionar errores de controladores, intente actualizar a travÃ©s de Windows Update o el sitio del fabricante." Foreground="#888" FontSize="13" Margin="0,0,0,20" TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Abrir Windows Update" Command="{Binding RunToolCommand}" CommandParameter="ms-settings:windowsupdate" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0" Padding="20,5"/>
                                    <Button Content="Administrador de Dispositivos" Command="{Binding RunToolCommand}" CommandParameter="devmgmt.msc" Style="{StaticResource SecondaryButtonStyle}" Padding="20,5"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Privacidad -->
            <TabItem Header="Control de Privacidad">
                <ScrollViewer Margin="0,15,0,0">
                    <StackPanel>
                        <Border Style="{StaticResource AnimatedCardStyle}" Padding="0">
                            <ItemsControl ItemsSource="{Binding PrivacySettings}">
                                <ItemsControl.ItemTemplate>
                                     <DataTemplate>
                                        <Border BorderBrush="#222" BorderThickness="0,0,0,1" Padding="20">
                                            <Grid>
                                                <StackPanel Margin="0,0,100,0">
                                                    <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                                    <TextBlock Text="{Binding Description}" Foreground="#888" FontSize="12" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                                </StackPanel>
                                                <ToggleButton HorizontalAlignment="Right" VerticalAlignment="Center" 
                                                              IsChecked="{Binding CurrentValue}"
                                                              Command="{Binding DataContext.UpdatePrivacySettingCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                              CommandParameter="{Binding}"
                                                              Style="{StaticResource ToggleSwitchStyle}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
